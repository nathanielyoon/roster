{
  "license": "0BSD",
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "eqeqeq",
        "no-console",
        "no-eval",
        "no-external-import",
        "no-self-compare",
        "no-sparse-arrays",
        "no-throw-literal",
        "no-useless-rename",
        "prefer-ascii",
        "triple-slash-reference"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ]
    }
  },
  "imports": {
    "@libn/json": "jsr:@libn/json@^0.4.3",
    "@libn/result": "jsr:@libn/result@^0.4.1",
    "@libn/router": "jsr:@libn/router@^0.2.1",
    "@libn/types": "jsr:@libn/types@^0.1.1",
    "@types/node": "npm:@types/node@^24.10.1"
  },
  "tasks": {
    "wrangle": "deno bundle --output ./worker.js ./src/router.ts && (wrangler deploy; rm -f ./worker.js);"
  }
}
